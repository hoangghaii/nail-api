# ==========================================
# NAIL API - PRODUCTION ENVIRONMENT
# ==========================================

NODE_ENV=production
PORT=3000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_MAX_POOL_SIZE=10

# JWT Secrets (generate strong random strings)
JWT_ACCESS_SECRET=<generate-strong-64-char-secret>
JWT_REFRESH_SECRET=<generate-strong-64-char-secret>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis (Redis Cloud)
REDIS_HOST=<redis-host>
REDIS_PORT=<redis-port>
REDIS_PASSWORD=<redis-password>

# CORS - Frontend URLs (update with production domain)
FRONTEND_CLIENT_URL=https://yourdomain.com
FRONTEND_ADMIN_URL=https://yourdomain.com/admin

# Cloudinary Storage
CLOUDINARY_CLOUD_NAME=<your-cloud-name>
CLOUDINARY_API_KEY=<your-api-key>
CLOUDINARY_API_SECRET=<your-api-secret>

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
