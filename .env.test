# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database (MongoDB Memory Server will override this)
MONGODB_URI=mongodb://localhost:27017/nail-salon-test
MONGODB_MAX_POOL_SIZE=5

# JWT Secrets (test values)
JWT_ACCESS_SECRET=test-access-secret-key-for-testing-only-min-32-chars
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis (disabled for testing)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS - Test Frontend URLs
FRONTEND_CLIENT_URL=http://localhost:5173
FRONTEND_ADMIN_URL=http://localhost:5174

# Firebase Storage (mock/disabled for testing)
FIREBASE_PROJECT_ID=test-project
FIREBASE_PRIVATE_KEY=<from-service-account-json>
FIREBASE_CLIENT_EMAIL=test@test-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=test-bucket.appspot.com

# Rate Limiting (very high limits for E2E testing)
RATE_LIMIT_TTL=1000
RATE_LIMIT_MAX=100000
