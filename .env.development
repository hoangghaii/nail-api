# Development Environment
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/nail-salon
MONGODB_MAX_POOL_SIZE=10

# JWT (DEVELOPMENT ONLY - CHANGE IN PRODUCTION)
JWT_ACCESS_SECRET=development_access_secret_change_in_production_min_64_chars_long_12345
JWT_REFRESH_SECRET=development_refresh_secret_change_in_production_min_64_chars_long_12345
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS - Frontend URLs
FRONTEND_CLIENT_URL=http://localhost:5173
FRONTEND_ADMIN_URL=http://localhost:5174

# Firebase Storage (Optional - Configure when implementing Phase 07)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-email@project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
